<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/qmui_config_color_gray_7"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/qmui_config_color_gray_7"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.qmuiteam.qmui.widget.QMUITopBar
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/qmui_topbar_height"
            app:qmui_topbar_bg_color="@color/colorAccent"
            app:qmui_topbar_need_separator="true" />
        <!--紧急停车-->
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@color/qmui_config_color_gray_7"
                android:text="紧急停车"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Switch
                android:id="@+id/mSwitchScram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="15dp"
                android:switchMinWidth="60dp"
                android:textOff="关闭"
                android:textOn="开启" />
        </RelativeLayout>

        <View
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <!--紧急停车-->
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@color/qmui_config_color_gray_7"
                android:text="帘纱互换"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Switch
                android:id="@+id/mSwitchInterchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="14dp"
                android:switchMinWidth="60dp"
                android:textOff="关闭"
                android:textOn="开启" />
        </RelativeLayout>

        <View
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <!--全部打开-->
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@color/qmui_config_color_gray_7"
                android:text="全部打开"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Switch
                android:id="@+id/mSwitchOpenAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="14dp"
                android:switchMinWidth="60dp"
                android:textOff="关闭"
                android:textOn="开启" />
        </RelativeLayout>

        <View
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <!--全部关闭-->
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@color/qmui_config_color_gray_7"
                android:text="全部关闭"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Switch
                android:id="@+id/mSwitchCloseAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="14dp"
                android:switchMinWidth="60dp"
                android:textOff="关闭"
                android:textOn="开启" />
            <!-- 教程中使用SPINNER -->
        </RelativeLayout>

        <View
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <RelativeLayout
            android:layout_marginTop="2dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:text="窗纱开合"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvResult_Screen_open"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="0" />

            <LinearLayout
                android:padding="0dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_below="@+id/tvResult_Screen_open"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《《"
                    android:textSize="20dp" />

                <SeekBar
                    android:layout_marginTop="5dp"
                    android:background="@color/qmui_config_color_50_white"
                    android:id="@+id/mSeek_Screen"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="》》"
                    android:textSize="20dp" />


            </LinearLayout>
        </RelativeLayout>
        <!--窗纱开合-->
        <View
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <!--窗帘开合-->
        <RelativeLayout
            android:layout_marginTop="2dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:text="窗帘开合"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvResult_Curtain_open"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="0" />

            <LinearLayout
                android:padding="0dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_below="@+id/tvResult_Curtain_open"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《《"
                    android:textSize="20dp" />

                <SeekBar
                    android:layout_marginTop="5dp"
                    android:background="@color/qmui_config_color_50_white"
                    android:id="@+id/mSeek_Curtain"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="》》"
                    android:textSize="20dp" />


            </LinearLayout>
        </RelativeLayout>

        <View
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <!--电机转速-->
        <RelativeLayout
            android:layout_marginTop="2dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:text="动力车体速度"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_Motor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="0" />

            <LinearLayout
                android:padding="0dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_below="@+id/tv_Motor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《《"
                    android:textSize="20dp" />

                <SeekBar
                    android:layout_marginTop="5dp"
                    android:background="@color/qmui_config_color_50_white"
                    android:id="@+id/mSeek_Motor"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="》》"
                    android:textSize="20dp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

<!--小车位置-->

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动力车体位置" />

            <TextView
                android:id="@+id/tvResult_Motor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="0" />
        </RelativeLayout>








    </LinearLayout>

</ScrollView>